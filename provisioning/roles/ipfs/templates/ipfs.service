[Unit]
Description=IPFS daemon

[Service]
ExecStart={{ ipfs_binary }} daemon --manage-fdlimit --enable-gc
Restart=on-failure
User=ipfs
Group=ipfs
Environment="IPFS_PATH={{ ipfs_path }}"
DevicePolicy=closed
ProtectSystem=true
ProtectHome=true
PrivateDevices=true
PrivateTmp=true
MemoryLimit=256M
# As yet unsupported security options
#PrivateUser=true
#ReadOnlyPaths=*
#ReadWritePaths={{ ipfs_path }}
#MemoryMax=512M

[Install]
WantedBy=default.target
